                        <!-- Power -->
                        <StackPanel x:Name="stackpanel_Power" Visibility="Collapsed">
                            <TextBlock Text="Power Options" FontSize="20" FontWeight="Medium"/>

                            <!-- SmartShift Eco -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="AMD SmartShift Eco reduces the power consumption by controlling application's running platform to deliver more mobile game time on battery."/>
                                <ToggleSwitch x:Name="toggleswitch_SmartShiftEco" Margin="10,0,0,0" OffContent="AMD SmartShift Eco" OnContent="AMD SmartShift Eco" Toggled="toggleswitch_SmartShiftEco_Toggled"/>
                            </StackPanel>

                            <!-- SmartShift Max -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="AMD SmartShift Max dynamically shifts power between CPU and GPU to boost performance, depending on workload."/>
                                        <TextBlock Margin="10,0,0,0" Text="AMD SmartShift Max" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <ComboBox x:Name="combobox_SmartShiftMaxMode" Margin="0,5,0,0" Width="300" SelectionChanged="combobox_SmartShiftMaxMode_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_SmartShiftMaxBias" Text="{Binding ElementName=slider_SmartShiftMaxBias, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Text="CPU" VerticalAlignment="Center" Margin="10,0,10,0" />
                                        <Slider Grid.Column="2" x:Name="slider_SmartShiftMaxBias" ValueChanged="slider_SmartShiftMaxBias_ValueChanged"/>
                                        <TextBlock Grid.Column="3" Text="GPU" VerticalAlignment="Center" Margin="10,0,0,0" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Display -->
                        <StackPanel x:Name="stackpanel_Display" Visibility="Collapsed">
                            <TextBlock Text="Display Options" FontSize="20" FontWeight="Medium"/>

                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <!-- FreeSync -->
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="AMD FreeSync technology synchronizes the refresh rate of a display with the framerate of AMD FreeSync compatible graphics card to deliver dynamic refresh rate.&#10;&#10;AMD FreeSync technology reduces or eliminates visual artifacts, input latency, screen tearing and stuttering during gaming and video playback."/>
                                        <ToggleSwitch x:Name="toggleswitch_FreeSync" Margin="10,0,0,0" OffContent="AMD FreeSync" OnContent="AMD FreeSync" Toggled="toggleswitch_FreeSync_Toggled"/>
                                    </StackPanel>

                                    <!-- FreeSync Color Accuracy-->
                                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="When enabled, FreeSync Color Accuracy activates the AMD FreeSync Premium Pro HDR media profile for the display for optimal color accuracy when viewing HDR content. When disabled, it activates the HDR10 media profile for the display."/>
                                        <ToggleSwitch x:Name="toggleswitch_FreeSyncColorAccuracy" Margin="10,0,0,0" OffContent="AMD FreeSync Color Accuracy" OnContent="AMD FreeSync Color Accuracy" Toggled="toggleswitch_FreeSyncColorAccuracy_Toggled"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Virtual Super Resolution -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Virtual Super Resolution allows applications to render at resolutions higher than the display's native pixel grid and then scales images down to fit the display, producing higher quality visuals at the expense of performance."/>
                                <ToggleSwitch x:Name="toggleswitch_VSR" Margin="10,0,0,0" OffContent="AMD Virtual Super Resolution" OnContent="AMD Virtual Super Resolution" Toggled="toggleswitch_VSR_Toggled"/>
                            </StackPanel>

                            <!-- Dynamic Refresh Rate Control -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Dynamic Refresh Rate Control saves power by switching to low panel refresh rate, or boosts performance by switching to high panel refresh rate when laptop is plugged."/>
                                <ToggleSwitch x:Name="toggleswitch_DynamicRefreshRateControl" Margin="10,0,0,0" OffContent="Dynamic Refresh Rate Control" OnContent="Dynamic Refresh Rate Control" Toggled="toggleswitch_DynamicRefreshRateControl_Toggled"/>
                            </StackPanel>

                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <!-- GPU Scaling -->
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="GPU scaling uses the GPU to scale up lower resolutions to fit the display. When not enabled, displays typically handle scaling themselves."/>
                                        <ToggleSwitch x:Name="toggleswitch_GPUScaling" Margin="10,0,0,0" OffContent="GPU Scaling" OnContent="GPU Scaling" Toggled="toggleswitch_GPUScaling_Toggled"/>
                                    </StackPanel>

                                    <!-- Integer Scaling -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Integer Display Scaling gives a sharp, pixelated look to images scaled up to fit the display. Images that can't be scaled to match the display's exact size and shape will be centered on screen. Integer Display Scaling enhances visuals in old games to revive vintage gaming experiences on a modern display.&#10;&#10;Integer Display Scaling is not supported when GPU Scaling is disabled."/>
                                        <ToggleSwitch x:Name="toggleswitch_IntegerScaling" Margin="10,0,0,0" OffContent="Integer Scaling" OnContent="Integer Scaling" Toggled="toggleswitch_IntegerScaling_Toggled"/>
                                    </StackPanel>

                                    <!-- Scaling Mode -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Method used to stretch and position images to fit the display."/>
                                            <TextBlock Text="Scaling Mode" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ComboBox x:Name="combobox_Display_ScalingMode" Margin="0,5,0,0" Width="300" SelectionChanged="combobox_Display_ScalingMode_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <!-- Vari-Bright -->
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Vari-Bright saves power by adaptively adjusting the display brightness based on image content."/>
                                        <ToggleSwitch x:Name="toggleswitch_VariBright" Margin="10,0,0,0" OffContent="Vari-Bright" OnContent="Vari-Bright" Toggled="toggleswitch_VariBright_Toggled"/>
                                    </StackPanel>

                                    <!-- Vari-Bright Level -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                                        <TextBlock Text="Vari-Bright Level" VerticalAlignment="Center"/>
                                        <ComboBox x:Name="combobox_Display_VariBright_Level" Margin="0,5,0,0" Width="300" SelectionChanged="combobox_Display_VariBright_Level_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Color Depth -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Color format to be used with your display."/>
                                            <TextBlock Text="Color Depth" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ComboBox x:Name="combobox_Display_ColorDepth" Margin="0,5,0,0" Width="300" SelectionChanged="combobox_Display_ColorDepth_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Pixel Format -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Pixel format used to encode images for the display."/>
                                            <TextBlock Text="Pixel Format" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ComboBox x:Name="combobox_Display_PixelFormat" Margin="0,5,0,0" Width="300" SelectionChanged="combobox_Display_PixelFormat_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Custom Color" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>

                            <!-- Color Temperature -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Choose how warm or cool images will look on your display."/>
                                        <TextBlock Text="Color Temperature" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" x:Name="button_Reset_ColorTemperature" Style="{ThemeResource ApplicationButtonImage}" ToolTipService.ToolTip="Reset to default" Click="button_Reset_ColorTemperature_Click">
                                            <Image Source="/Assets/Reset.png" Width="28" Height="28"/>
                                        </Button>
                                        <TextBox Grid.Column="1" x:Name="textbox_Display_ColorTemperature" Margin="10,0,0,0" Text="{Binding ElementName=slider_Display_ColorTemperature, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="2" x:Name="slider_Display_ColorTemperature" Margin="10,0,0,0" ValueChanged="slider_Display_ColorTemperature_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Brightness -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <TextBlock Text="Brightness"/>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_Brightness" Text="{Binding ElementName=slider_Display_Brightness, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_Brightness" Margin="10,0,0,0" ValueChanged="slider_Display_Brightness_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Contrast -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <TextBlock Text="Contrast"/>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_Contrast" Text="{Binding ElementName=slider_Display_Contrast, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_Contrast" Margin="10,0,0,0" ValueChanged="slider_Display_Contrast_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Saturation -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <TextBlock Text="Saturation"/>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_Saturation" Text="{Binding ElementName=slider_Display_Saturation, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_Saturation" Margin="10,0,0,0" ValueChanged="slider_Display_Saturation_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Hue -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <TextBlock Text="Hue"/>
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_Hue" Text="{Binding ElementName=slider_Display_Hue, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_Hue" Margin="10,0,0,0" ValueChanged="slider_Display_Hue_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Overrides" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>

                            <!-- HDCP Support -->
                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="If High-bandwidth Digital Content Protection (HDCP) is disabled on this display, digitally protected content may be unplayable, or played at a lower resolution.&#10;&#10;* System restart required to take effect."/>
                                <ToggleSwitch x:Name="toggleswitch_HDCPSupport" Margin="10,0,0,0" OffContent="HDCP Support" OnContent="HDCP Support" Toggled="toggleswitch_HDCPSupport_Toggled"/>
                            </StackPanel>

                            <!-- Relative Voltage Swing -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Allows you to set the difference between maximum and minimum output voltage."/>
                                        <TextBlock Margin="10,0,0,0" Text="Relative Voltage Swing" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_RelativeVoltageSwing" Text="{Binding ElementName=slider_Display_RelativeVoltageSwing, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_RelativeVoltageSwing" Margin="10,0,0,0" ValueChanged="slider_Display_RelativeVoltageSwing_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Relative Preset Emphasis -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="A process that is designed to improve overall signal-to-noise ratio."/>
                                        <TextBlock Margin="10,0,0,0" Text="Relative Preset Emphasis" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Display_RelativePreEmphasis" Text="{Binding ElementName=slider_Display_RelativePreEmphasis, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider Grid.Column="1" x:Name="slider_Display_RelativePreEmphasis" Margin="10,0,0,0" ValueChanged="slider_Display_RelativePreEmphasis_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Multimedia -->
                        <StackPanel x:Name="stackpanel_Multimedia" Visibility="Collapsed">
                            <TextBlock Text="Video Options" FontSize="20" FontWeight="Medium"/>

                            <!-- Video Super Resolution -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Video Super Resolution improves video playback quality by upscaling the video."/>
                                <ToggleSwitch x:Name="toggleswitch_VideoSuperResolution" Margin="10,0,0,0" OffContent="AMD Video Super Resolution" OnContent="AMD Video Super Resolution" Toggled="toggleswitch_VideoSuperResolution_Toggled"/>
                            </StackPanel>

                            <!-- Video Upscale -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Video upscale improves video playback quality by applying sharpening on the upscaled video."/>
                                        <ToggleSwitch x:Name="toggleswitch_VideoUpscale" Margin="10,0,0,0" OffContent="Video Upscale" OnContent="Video Upscale" Toggled="toggleswitch_VideoUpscale_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Sharpening" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_VideoUpscale_Sharpening" Margin="5,0,0,0" Text="{Binding ElementName=slider_VideoUpscale_Sharpening, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_VideoUpscale_Sharpening" Width="150" Margin="10,0,10,0" ValueChanged="slider_VideoUpscale_Sharpening_ValueChanged"/>
                                        <TextBlock Text="%" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Settings -->
                        <StackPanel x:Name="stackpanel_Settings" Visibility="Collapsed">
                            <TextBlock Text="Overclock Settings" FontSize="20" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Reapply your set tuning and fans settings when those have been reset to defaults by the GPU driver due to an unexpected system failure.&#10;&#10;* You can set the tuning and fans settings to keep active by clicking on 'Keep active' on the tuning tab.&#10;&#10;* Make sure you are using stable tuning settings."/>
                                <ToggleSwitch x:Name="toggleswitch_ActiveOverclock" Margin="10,0,0,0" OffContent="Keep tuning and fans settings active" OnContent="Keep tuning and fans settings active" Toggled="toggleswitch_ActiveOverclock_Toggled"/>
                            </StackPanel>

                            <TextBlock Text="Window Settings" FontSize="20" FontWeight="Medium" Margin="0,10,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Show this window on top of other applications."/>
                                <ToggleSwitch x:Name="toggleswitch_Window_Top" Margin="10,0,0,0" OffContent="Show window on top" OnContent="Show window on top" Toggled="toggleswitch_Window_Top_Toggled"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Information -->
                        <Grid x:Name="stackpanel_Information" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" x:Name="textblock_DeviceInfo">Loading...</TextBlock>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Button x:Name="button_Website_Project" Content="Visit Project Website" Style="{ThemeResource ApplicationButton}" Click="button_Website_Project_Click"/>
                                <Button x:Name="button_Website_Donation" Content="Open Donation Page" Style="{ThemeResource ApplicationButton}" Margin="10,0,0,0" Click="button_Website_Donation_Click"/>
                                <Button x:Name="button_Fps_Overlayer" Margin="10,0,0,0" Content="Get FpsOverlayer" Style="{ThemeResource ApplicationButton}" Click="button_Fps_Overlayer_Click"/>
                                <Button x:Name="button_Check_Update" Margin="10,0,0,0" Content="Check for update" Style="{ThemeResource ApplicationButton}" Click="button_Check_Update_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Overlay -->
        <Grid x:Name="grid_Overlay" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="{ThemeResource ApplicationBlackColor}" Opacity="0.90"/>
            </Grid.Background>
            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="textblock_Overlay_Text" Text="..." TextWrapping="Wrap" FontSize="40" TextAlignment="Center" Foreground="{ThemeResource ApplicationWhiteColor}"/>
                <TextBlock x:Name="textblock_Overlay_Sub_Text" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="24" TextAlignment="Center" Foreground="{ThemeResource ApplicationDimGrayColor}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>